@using Dex.Common.Resources

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DexSoftware</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ControlsStyles.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav id="navbar" class="nav border-bottom navbar-light navbar-toggleable-sm navbar navbar-expand-sm nav-bar">
            <div class="container">
                <ul>
                    <li>
                        <a class="nav-bar-brand" asp-controller="Home" asp-action="Index" asp-area="Home">@ControlsResources.Home</a>
                    </li>
                    <li>
                        <a class="dropdown-toggle" asp-controller="Home" asp-action="AllDownloads" asp-area="Home">@ControlsResources.Downloads</a>
                        <ul>
                            <li><a href="#">Subnav Item 1</a></li>
                            <li><a href="#">Subnav Item 2</a></li>
                            <li><a href="#">Subnav Item 3</a></li>
                            <li>
                                <a class="last-nav-item" asp-controller="Home" asp-action="AllDownloads" asp-area="Home">@ControlsResources.ViewAll</a>
                            </li>

                        </ul>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="Home" asp-controller="Home" asp-action="Blog">@ControlsResources.Blog</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="Home" asp-controller="Home" asp-action="About">@ControlsResources.About</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="Home" asp-controller="Home" asp-action="Privacy">@ControlsResources.Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - DexSoftware - <a asp-area="Home" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="js/site.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
