@page
@model Dex.Web.Pages.Identity.MyAccountDefaultModel

<div class="vl"></div>
<div class="title">
    <h1>My Account</h1>
    <hr />
    <div class="col-md-4">
        <h4>Basic details</h4>
        <br/>
        <div class="form-group">
            <label asp-for="AccountInformationViewModel.Username"></label>
            <input asp-for="AccountInformationViewModel.Username" class="form-control" readonly="readonly"/>
            <span asp-validation-for="AccountInformationViewModel.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AccountInformationViewModel.Email"></label>
            <input asp-for="AccountInformationViewModel.Email" class="form-control" readonly="readonly"/>
            <span asp-validation-for="AccountInformationViewModel.Email" class="text-danger"></span>
        </div>
    </div>
</div>

