@page
@model Dex.Web.Pages.Identity.ResetPasswordModel
@{
    ViewData["Title"] = "";
}

<h1>Reset password</h1>
<h4>Reset your password.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="ViewModel.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="ViewModel.Email"></label>
                <input asp-for="ViewModel.Email" class="form-control" />
                <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModel.Password"></label>
                <input asp-for="ViewModel.Password" class="form-control" />
                <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewModel.ConfirmPassword"></label>
                <input asp-for="ViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
